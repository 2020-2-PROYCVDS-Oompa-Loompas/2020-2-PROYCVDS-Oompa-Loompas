<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.cvds.mappers.UsuarioMapper">
	<select id="getUsuario" parameterType="map" resultMap="UsuarioResult">
		SELECT
		u.carnet
		u.nombre
		u.correo
		u.contrasena
		u.estado
		u.rol
		FROM usuario as u
		WHERE u.correo = #{correo};
	</select>
	<insert id="registrarUsuario" parameterType="map">
		insert into usuario values(#{carnet},#{nombre},#{correo},#{contrasena},#{estado}, #{rol})
	</insert>
	<resultMap type='Usuario' id='UsuarioResult'>
	    <id property='id' column='carnet'/>
	    <result property="nombre" column="nombre"></result>
	    <result property="correo" column="correo"></result>
	    <result property="contrasena" column="contrasena"></result>
	    <result property="estado" column="estado"/>    
		<result property="rol" column="rol"/>
	</resultMap>
</mapper>